	<developers>
		<developer>
			<name>Guilherme Fane</name>
			<url>https://twitter.com/fanezinho</url>
		</developer>
		<developer>
			<name>Adler Lopes</name>
			<url>https://twitter.com/thetruzzi_</url>
		</developer>
	</developers>
	
	<repositories>
        <repository>
         <id>twitter4j.org</id>
         <name>twitter4j.org Repository</name>
         <url>http://twitter4j.org/maven2</url>
         <releases>
            <enabled>true</enabled>
         </releases>
         <snapshots>
            <enabled>true</enabled>
         </snapshots>
      </repository>
      <repository>
            <id>dmulloy2-repo</id>
            <url>http://repo.dmulloy2.net/content/groups/public/</url>
        </repository>
	</repositories>

	<dependencies>
	   <dependency>
            <groupId>org.twitter4j</groupId>
            <artifactId>twitter4j-core</artifactId>
            <version>[4.0,)</version>
        </dependency>
		<dependency>
			<groupId>br.com.zenix.core</groupId>
			<artifactId>core</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		   <dependency>
            <groupId>com.comphenix.protocol</groupId>
            <artifactId>ProtocolLib-API</artifactId>
            <version>4.3.0</version>
        </dependency>
	</dependencies>

	<build>
		<finalName>${project.name}-${project.version}-original</finalName>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<defaultGoal>clean package</defaultGoal>
		<directory>target</directory>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.4.3</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>Version.java.template</exclude>
										<exclude>META-INF/</exclude>
									</excludes>
								</filter>
							</filters>
							<createDependencyReducedPom>false</createDependencyReducedPom>
							<finalName>${project.name}-${project.version}-original</finalName>
							<artifactSet>
								<includes>
									<include>br.com.zenix.core:core</include>
									<include>redis.clients:jedis</include>
									<include>com.comphenix.protocol:ProtocolLib-API</include>
									<include>org.twitter4j:twitter4j-core</include>
									<include>org.apache.commons:commons-pool2</include>
									<include>com.google.code.gson:gson</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.github.wvengen</groupId>
				<artifactId>proguard-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
						</goals>
					</execution>
				</executions>
				<configuration>
					<obfuscate>true</obfuscate>
					<injar>${project.name}-${project.version}-original.jar</injar>
					<outjar>${project.name}-${project.version}.jar</outjar>
					<outputDirectory>${project.build.directory}</outputDirectory>
					<proguardInclude>${basedir}/proguard.conf</proguardInclude>
					<libs>
						<lib>${java.home}/lib/rt.jar</lib>
						<lib>${java.home}/lib/jsse.jar</lib>
					</libs>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
